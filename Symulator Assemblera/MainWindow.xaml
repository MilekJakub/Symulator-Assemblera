<Window x:Class="Symulator_Assemblera.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Symulator_Assemblera"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="10">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="AliceBlue" BorderBrush="Aqua" BorderThickness="1" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Center">
                    <StackPanel>
                        <Label Width="53">Z:</Label>
                        <Label Width="43">AX</Label>
                        <Label Width="43">BX</Label>
                        <Label Width="43">CX</Label>
                        <Label Width="43">DX</Label>
                    </StackPanel>
                    <StackPanel Margin="53, 0, 0, 0">
                        <RadioButton x:Name="zAX"></RadioButton>
                        <RadioButton x:Name="zBX"></RadioButton>
                        <RadioButton x:Name="zCX"></RadioButton>
                        <RadioButton x:Name="zDX"></RadioButton>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="AliceBlue" BorderBrush="Aqua" BorderThickness="1" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Center">
                    <StackPanel>
                        <Label>NA:</Label>
                        <Label Width="43">AX</Label>
                        <Label Width="43">BX</Label>
                        <Label Width="43">CX</Label>
                        <Label Width="43">DX</Label>
                    </StackPanel>
                    <StackPanel Margin="53, 0, 0, 0">
                        <RadioButton x:Name="naAX"></RadioButton>
                        <RadioButton x:Name="naBX"></RadioButton>
                        <RadioButton x:Name="naCX"></RadioButton>
                        <RadioButton x:Name="naDX"></RadioButton>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
